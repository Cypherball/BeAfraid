<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.theboringman.beafraid.ChatsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/chats_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="0dp"
        android:background="@color/colorPrimary"
        android:padding="0dp"
        android:elevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingEnd="16dp"
            android:paddingStart="0dp">

            <TextView
                android:id="@+id/chats_playerName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/app_name"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <ImageButton
                android:id="@+id/chats_settings"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"
                android:background="@color/colorPrimary"
                android:layout_centerVertical="true"
                android:onClick="goToSettings"
                android:src="@drawable/settings"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/chats_story1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:onClick="goToStory1"
        android:layout_below="@id/chats_toolbar">
        <ImageView
            android:id="@+id/chats_pic1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/user"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="16dp"/>
        <TextView
            android:id="@+id/chats_chat1"
            android:layout_width="wrap_content"
            android:layout_height="25sp"
            android:text="Selina Kyle"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:textColor="#000000"
            android:layout_toEndOf="@id/chats_pic1"/>
        <TextView
            android:id="@+id/chats_message1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap to Chat"
            android:layout_marginStart="2dp"
            android:textSize="14sp"
            android:layout_toEndOf="@id/chats_pic1"
            android:layout_below="@id/chats_chat1"/>
        <TextView
            android:id="@+id/chats_time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:15"
            android:layout_marginStart="2dp"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"/>
    </RelativeLayout>
</RelativeLayout>
